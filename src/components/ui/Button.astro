---
interface Props {
    href: string;
}

const { href } = Astro.props;
---

<button
    class="hidden lg:inline group relative h-12 w-40 overflow-hidden rounded-lg bg-slate-600 text-lg">
    <div
        class="absolute inset-0 w-4 bg-slate-200 transition-all duration-[350ms] ease-out group-hover:w-11/12">
    </div>
    <span class="relative text-slate-200 group-hover:text-slate-600">
        <a href={href}>
            <slot />
        </a>
    </span>
</button>
