---
import Layout from "../layouts/Layout.astro";
import CodeIcon from "../components/icons/CodeIcon.astro";
---

<Layout title="Welcome to Astro.">
    <main>
        <div class="flex flex-col w-11/12 mx-auto place-items-center">
            <div class="text-slate-300 w-24 h-auto mt-5">
                <CodeIcon />
            </div>
            <h1 class="text-slate-300 text-2xl">
                Howdy! I'm <span
                    class="font-bold bg-gradient-to-r from-pink-500 to-purple-500 bg-clip-text text-transparent"
                    >Sebastian</span
                >
            </h1>
            <p class="text-slate-300">
                Fullstack Web Developer with an English level of C2<br />
                <strong>Code Challenge:</strong> Tweak the "Welcome to Astro" message above.
            </p>
            <img
                src="src/assets/foto_perfil.jpeg"
                alt="Foto de perfil"
                class="w-1/2 h-auto sm:w-60 sm:h-auto rounded-full mt-5 drop-shadow-lg"
            />
        </div>
    </main>
</Layout>
